/* baseui/nav-bar/index.wxss */
.nav-bar {
  display: flex;
  height: 44px;
  /* line-height: 44px; */
  text-align: center;
}
/* .status{} */

.left,
.right,
.center{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
}

.left-slot:empty + .left-arrow,
.center-slot:empty + .center-title,
.right-slot:empty + .right-arrow {
  display: block;
}
.left .left-arrow,
.center-title,
.right .right-arrow  {
  display: none;
}

.left .left-arrow .icon{
  display: block; 
  width: 44rpx;
}
.center{
  flex: 1;
}